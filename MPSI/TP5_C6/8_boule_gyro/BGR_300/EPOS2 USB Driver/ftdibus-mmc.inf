[Version]
Signature="$Windows NT$"
DriverPackageType=PlugAndPlay
DriverPackageDisplayName=%DESC%
Class=Maxon
ClassGUID={3364AC42-BA6D-4b7a-A717-25127D8A4F41}
Provider=%Maxon%
CatalogFile=ftdibus-mmc.cat
DriverVer=07/12/2013,2.08.30.2

[SourceDisksNames]
1=%DriversDisk%,,,

[SourceDisksFiles]
ftdibus-mmc.sys = 1,i386
ftbusui.dll = 1,i386
ftd2xx.dll = 1,i386
FTLang.Dll = 1,i386

[SourceDisksFiles.amd64]
ftdibus-mmc.sys = 1,amd64
ftbusui.dll = 1,amd64
ftd2xx64.dll = 1,amd64
ftd2xx.dll = 1,i386
FTLang.Dll = 1,amd64

[DestinationDirs]
FtdiBus.NT.Copy = 10,system32\drivers
FtdiBus.NT.Copy2 = 10,system32
FtdiBus.NTamd64.Copy = 10,system32\drivers
FtdiBus.NTamd64.Copy2 = 10,system32
FtdiBus.NTamd64.Copy3 = 10,syswow64

[ClassInstall32]
Addreg=ClassReg

[ClassReg]
HKR,,,0,%ClassName%
HKR,,Icon,,-53
[Manufacturer]
%Maxon%=FtdiHw,NTamd64

[FtdiHw]
%USB\VID_0403&PID_A8B0.DeviceDesc%=FtdiBus.NT,USB\VID_0403&PID_A8B0

[FtdiHw.NTamd64]
%USB\VID_0403&PID_A8B0.DeviceDesc%=FtdiBus.NTamd64,USB\VID_0403&PID_A8B0

[ControlFlags]
ExcludeFromSelect=*

[FtdiBus.NT]
CopyFiles=FtdiBus.NT.Copy,FtdiBus.NT.Copy2
AddReg=FtdiBus.NT.AddReg

[FtdiBus.NTamd64]
CopyFiles=FtdiBus.NTamd64.Copy,FtdiBus.NTamd64.Copy2,FtdiBus.NTamd64.Copy3
AddReg=FtdiBus.NT.AddReg

[FtdiBus.NT.Services]
AddService = FTDIBUS, 0x00000002, FtdiBus.NT.AddService

[FtdiBus.NTamd64.Services]
AddService = FTDIBUS, 0x00000002, FtdiBus.NT.AddService

[FtdiBus.NT.AddService]
DisplayName = %SvcDesc%
ServiceType = 1 ; SERVICE_KERNEL_DRIVER
StartType = 3 ; SERVICE_DEMAND_START
ErrorControl = 1 ; SERVICE_ERROR_NORMAL
ServiceBinary = %10%\system32\drivers\ftdibus-mmc.sys
LoadOrderGroup = Base
AddReg = FtdiBus.NT.AddService.AddReg

[FtdiBus.NT.AddReg]
HKR,,DevLoader,,*ntkern
HKR,,NTMPDriver,,ftdibus-mmc.sys
HKR,,EnumPropPages32,,"ftbusui.dll,FTBUSUIPropPageProvider"

[FtdiBus.NT.AddService.AddReg]
;HKR,Parameters,"LocIds",1,31,00,00,00,32,00,00,00,00
;HKR,Parameters,"RetryResetCount",0x10001,50


[FtdiBus.NT.Copy]
ftdibus-mmc.sys

[FtdiBus.NT.Copy2]
ftbusui.dll
ftd2xx.dll
FTLang.dll

[FtdiBus.NTamd64.Copy]
ftdibus-mmc.sys

[FtdiBus.NTamd64.Copy2]
ftbusui.dll
ftd2xx.dll,ftd2xx64.dll
FTLang.dll

[FtdiBus.NTamd64.Copy3]
ftd2xx.dll

[Strings]
Maxon="maxon motor ag"
DESC="EPOS Driver Package"
DriversDisk="EPOS USB Drivers Disk"
Usb\VID_0403&PID_A8B0.DeviceDesc="maxon motor EPOS"
Usb\VID_0403&PID_A9B0.DeviceDesc="maxon motor EPOS"
SvcDesc="maxon motor EPOS"
ClassName="maxon motor controllers"
